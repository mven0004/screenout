@model IEnumerable<WebApplication1.Models.Child>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

    <div class="row">
        <div class="col-12">
            <h3 class="text-primary">Children and Screen Time Goal</h3>
            <hr />
        </div>
    </div>

@if(Model.Count() == 0)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info">
                <h3>Notice:</h3>
                It appears that you do not have any child under your profile yet.
                Please add a child and start tracking screen time and family time.
            </div>
        </div>
    </div>
}

<p>
    @Html.ActionLink("Add Child", "Create", null, htmlAttributes: new { @class = "btn btn-success" })
</p>

<table class="table table-hover bg-white">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScreenTimeGoal)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScreenTimeGoal)
                </td>
                <td>
                    @Html.ActionLink("View Progress", "Progress", routeValues: new { id=item.Id }, htmlAttributes: new { @class="btn btn-secondary btn-sm"})
                    @Html.ActionLink("Add Tracking", "Create", "TrackedTimes", routeValues: new { }, htmlAttributes: new { @class="btn btn-success btn-sm" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Remove", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>


@model WebApplication1.Models.Child

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row">
    <div class="col-12">
        <h3 class="text-primary">Add Child and Set Screen Time Goal</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-light">
                <h4>Child Information</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Child Name" } })
                            </div>
                            <div class="col-md-12 col-lg-5">
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.ScreenTimeGoal, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.ScreenTimeGoal, new { htmlAttributes = new { @class = "form-control", placeholder = "Num of Hours", type = "number", min = "0", max = "10", step = "0.1" } })
                            </div>
                            <div class="col-md-12 col-lg-5">
                                @Html.ValidationMessageFor(model => model.ScreenTimeGoal, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-success" />
                                @Html.ActionLink("Cancel", "Index", null, htmlAttributes: new { @class = "btn btn-outline-secondary" })
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.UserId, htmlAttributes: new { Value = ViewBag.UserId })
                    </div>
                }
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


@{
    ViewBag.Title = "DeleteUser";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row">
    <div class="col-12">
        <h3 class="text-primary">Delete User Account</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="alert alert-danger">
            <h4>Warning</h4>
            <hr />
            <p>
                <strong>Are you sure you want to delete your account?</strong> You cannot recover your data after
                this operation.
                <br />
                Once you click on <strong class="text-danger">Delete</strong> button, the data associated with your profil will
                be deleted immediately and you will be redirected to the Home page.
            </p>
        </div>
    </div>
</div>

@if (@ViewBag.ErrorMessage != null)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-danger">
                <h4>Error</h4>
                <hr />
                <p>
                    @ViewBag.ErrorMessage
                </p>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete Account" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", "Dashboard", null, htmlAttributes: new { @class = "btn btn-outline-secondary" })
            </div>
        }
    </div>
</div>


@model WebApplication1.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .validation-summary-errors ul {
        display: inline;
        padding-left: 0;
        list-style: none;
    }
</style>

<div class="row">
    <div class="col-12">
        <h3 class="text-primary">Manage Password</h3>
        <hr />
    </div>
</div>


<div class="card shadow">
    <div class="card-header bg-light">
        <h4>Change Password</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            <div class="form-group row">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-5 col-lg-3 control-label" })
                <div class="col-md-7 col-lg-4">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-5 col-lg-3 control-label" })
                <div class="col-md-7 col-lg-4">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 col-lg-3 control-label" })
                <div class="col-md-7 col-lg-4">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Change Password" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Index", "Dashboard", null, htmlAttributes: new { @class="btn btn-outline-secondary"})
                </div>
            </div>
        }
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
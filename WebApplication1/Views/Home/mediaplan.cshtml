</div>

@section Scripts {
    
    <script>
        // Smooth scroll to a selected section on the same page
        function SmoothScrollTo(event, timelength) {
            // get the ID attribute of the go-to section via href of <a> tag
            var id_section = $(event.target).attr('href');
            var timelength = timelength || 1000;
            $('html, body').animate({
                // -70px so that we can see full header of the section
                scrollTop: $(id_section).offset().top - 70
            }, timelength, function () {
                window.location.hash = id_section;
            });
        }
    </script>
}

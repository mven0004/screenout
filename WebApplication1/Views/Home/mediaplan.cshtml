
@{
    ViewBag.Title = "mediaplan";
    ViewBag.CurrentPage = "MediaPlan";
}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<style>
    .homeimg {
        height: 70vh;
        min-height: 400px;
        background-image: url('../../img/media-plan-banner_cr.jpg');
        background-size: cover;
        background-position: top;
        background-repeat: no-repeat;
    }

    .overlay-div {
        height: 70vh;
        min-height: 400px;
        width: 100%;
        position: absolute;
        background-color: #000;
        opacity: .2;
    }

    .banner-content h1 {
        color: #fff;
        font-size: 60px;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .banner-content h4 {
        color: #fff;
    }

    .banner-content .primary-btn {
        background: #fff;
        border: 1px solid #fff;
        color: #15181d;
        margin-top: 40px;
    }

    .primary-btn {
        position: relative;
        display: inline-block;
        line-height: 48px;
        color: #fff;
        padding: 0px 35px;
        font-family: "Lora",serif;
        font-size: 15px;
        /* font-weight: 400; */
        outline: none !important;
        text-align: center;
        cursor: pointer;
        text-transform: capitalize;
        background: #ff573d;
        border: 1px solid #ff573d;
        border-radius: 2px;
        -webkit-transition: all 0.3s ease 0s;
        -moz-transition: all 0.3s ease 0s;
        -o-transition: all 0.3s ease 0s;
        transition: all 0.3s ease 0s;
    }

    .bgc {
        background-image: linear-gradient(to bottom,#f9fbfd 0,#fff 100%);
    }

    .title1 {
        letter-spacing: -.75px;
        font-family: serif;
        font-weight: 700;
        margin: 0 0 25px;
        font-size: 50px
    }

    .describ {
        font-size: 25px;
    }
</style>

<!-- first part of the page- the background div -->

<div class="homeimg">
    <div class="overlay-div"></div>
    <div class="container h-100">
        <!-- the inside text container div -->
        <div class="row h-100 align-items-center">
            <!-- the text row div -->
            <div class="col-12 text-center">
                <h2 class="hero-title text-white title1"><b>Changing Behaviours</b></h2>
                <p class="describ text-white text-center">Set a screen time plan today and make commitments with your child</p>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-primary" href="#featuresection" onclick="SmoothScrollTo(event)">See Preview</a>
                </div>
            </div>
        </div>
    </div>
</div><!--./ the background div -->
<span id="featuresection"></span>

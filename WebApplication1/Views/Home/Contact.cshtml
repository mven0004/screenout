@model MVCEmail.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}
<style>
    .connactimg {
        height: 100vh;
        min-height: 500px;
        background-image: url('../../img/connect.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .overlay-div {
        height: 100vh;
        min-height: 500px;
        width: 100%;
        position: absolute;
        background-color: #000;
        opacity: .7;
    }

    .setinputsize1 {
        height: 30px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="connactimg">
        <div class="overlay-div"></div> <!-- the new div -->
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12 text-center">
                    <h2 class="lead text-white">Contact Us</h2>
                    <h3 class="font-weight-light text-white ">We will Help You</h3>
                    <div class="row" style="padding-top:40px">
                        <div class="col-md-12">
                            <form id="contactForm" name="sentMessage" novalidate="novalidate">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control setinputsize1 col-12", @placeholder = "Please enter your name.", @type = "text", @id = "name"})
                                            @Html.ValidationMessageFor(m => m.CustomerName, null, new {  @class = "text-danger" })
                                            <p class="help-block text-danger"></p>
                                        </div>
                                        <div class="form-group">
                                            
                                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control setinputsize1 col-12", @placeholder = "Please enter your email address.", @type = "text", @id = "email" })
                                            @Html.ValidationMessageFor(m => m.FromEmail, null, new {  @class = "text-danger" })
                                            <p class="help-block text-danger"></p>
                                        </div>
                                        <div class="form-group">
                                            
                                            @Html.TextBoxFor(m => m.PhoneNum, new { @class = "form-control setinputsize1 col-12", @placeholder = "Please enter your phone number.", @type = "text", @id = "phone" })
                                            @Html.ValidationMessageFor(m => m.PhoneNum, null, new {  @class = "text-danger" })
                                            <p class="help-block text-danger"></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                           
                                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control setinputsize2 col-12 resizer", @placeholder = "Please enter a message.", @type = "text", @id = "Message" ,@style = "height:120px"})
                                            @Html.ValidationMessageFor(m => m.Message, null, new {  @class = "text-danger" })
                                            <p class="help-block text-danger"></p>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-12 text-center">
                                        <div id="success"></div>
                                        <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Send Message</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
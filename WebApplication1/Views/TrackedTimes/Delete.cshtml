@model WebApplication1.Models.TrackedTime

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="row">
    <div class="col-12">
        <h3 class="text-primary">Delete Tracked Time Record</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="alert alert-danger">
            <h4>Warning</h4>
            <hr />
            <p><strong>Are you sure you want to delete this record?</strong> You cannot recover the data after this operation.</p>
            <p>Once you click on <strong class="text-danger">Delete</strong> button, the data will be deleted immediately and you will be redirected to Tracked Time list.</p>
        </div>
    </div>
</div>
<div class="card shadow">
    <div class="card-header bg-light">
        <h4>Tracking Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-md-6 col-lg-3">
                @Html.DisplayNameFor(model => model.Child.Name)
            </dt>

            <dd class="col-md-6 col-lg-9">
                @Html.DisplayFor(model => model.Child.Name)
            </dd>

            <dt class="col-md-6 col-lg-3">
                @Html.DisplayNameFor(model => model.TrackedDate)
            </dt>

            <dd class="col-md-6 col-lg-9">
                @Html.DisplayFor(model => model.TrackedDate)
            </dd>

            <dt class="col-md-6 col-lg-3">
                @Html.DisplayNameFor(model => model.FamilyTime)
            </dt>

            <dd class="col-md-6 col-lg-9">
                @Html.DisplayFor(model => model.FamilyTime)
            </dd>

            <dt class="col-md-6 col-lg-3">
                @Html.DisplayNameFor(model => model.ScreenTime)
            </dt>

            <dd class="col-md-6 col-lg-9">
                @Html.DisplayFor(model => model.ScreenTime)
            </dd>

            <dt class="col-md-6 col-lg-3">
                @Html.DisplayNameFor(model => model.ScreenTimeGoal)
            </dt>

            <dd class="col-md-6 col-lg-9">
                @Html.DisplayFor(model => model.ScreenTimeGoal)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, htmlAttributes: new { @class = "btn btn-outline-secondary" })
            </div>
        }
    </div>
</div>

@model WebApplication1.Models.TrackedTime

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css" rel="stylesheet" />



<div class="row">
    <div class="col-12">
        <h3 class="text-primary">Add Family Time and Screen Time</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-light">
                <h4>Tracking Information</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            @Html.LabelFor(model => model.ChildId, "Child Name", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.DropDownList("ChildId", null, htmlAttributes: new { @class = "form-control" })

                            </div>
                            <div class="col-md-5">
                                @Html.ValidationMessageFor(model => model.ChildId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.TrackedDate, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.TrackedDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-5">
                                @Html.ValidationMessageFor(model => model.TrackedDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.FamilyTime, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.FamilyTime, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", max = "10", step = "0.5" } })
                            </div>
                            <div class="col-md-5">
                                @Html.ValidationMessageFor(model => model.FamilyTime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.ScreenTime, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.ScreenTime, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", max = "10", step = "0.5" } })
                            </div>
                            <div class="col-md-5">
                                @Html.ValidationMessageFor(model => model.ScreenTime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.ScreenTimeGoal, htmlAttributes: new { value = "0" })

                        <div class="form-group row">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-success" />
                                @Html.ActionLink("Back to Dashboard", "Index", "Dashboard", null, htmlAttributes: new { @class = "btn btn-outline-secondary" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
    $('#TrackedDate').datepicker({
        weekStart: 1,
        daysOfWeekHighlighted: "6,0",
        autoclose: true,
        todayHighlight: true,
        format: 'dd/M/yyyy'
    });
    $('#TrackedDate').datepicker("setDate", new Date());
    </script>
}
